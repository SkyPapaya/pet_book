<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.skypapaya.mapper.UserMapper">

    <select id="selectById" resultType="com.skypapaya.entity.User">
        SELECT * FROM user WHERE id=#{userId}
    </select>

    <select id="selectByAccountId" resultType="com.skypapaya.entity.User">
        SELECT * FROM user WHERE account_id=#{accountId}
    </select>

    <insert id="insertUser" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user (account_id, password, nickname, create_time, update_time)
        VALUES (#{accountId}, #{password}, #{nickname}, NOW(), NOW())
    </insert>
</mapper>

